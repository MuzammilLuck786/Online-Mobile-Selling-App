<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/ic_launcher_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="236dp"
        android:background="@color/ic_launcher_background"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="225dp">

            <ImageView
                android:id="@+id/Detailimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/oppophone"
                android:scaleType="centerCrop">

            </ImageView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="@color/ic_launcher_background"
        android:layout_marginTop="280dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Detailname"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="OPPO A17 (Lake Blue)"
            android:textColor="@color/purple_700"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Detailprice"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="Price: 46,999 PKR"
            android:textColor="@color/purple_700"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Detaildiscount"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="Discount:0% Off"
            android:textColor="@color/purple_700"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:background="@color/ic_launcher_background"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/DetailStorage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_btn"
            android:padding="5dp"
            android:text="4GB RAM | 64GB Storage"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/DetailScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_btn"
                android:padding="5dp"
                android:text="16.66cm (6.56 inch) HD+ Display"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DetailBattery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_btn"
                android:padding="5dp"
                android:text="5000mAh"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/DetailAllcameras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_btn"
                android:padding="5dp"
                android:text="50MP +0.3MP + 0.3MP"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DetailFrontcamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_btn"
                android:padding="5dp"
                android:text="5MP Front Camera"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="630dp"
        android:layout_marginBottom="5dp"
        android:background="#59A7BC">

        <ImageView
            android:id="@+id/Additem"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/additem" />

        <TextView
            android:id="@+id/Itemcount"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:text="1"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/Removeitem"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/removeitem" />

        <Button
            android:id="@+id/Addtocart"
            android:layout_width="158dp"
            android:layout_height="match_parent"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/black"
            android:text="ADD TO CART"
            android:textStyle="bold" />
    </LinearLayout>


</androidx.cardview.widget.CardView>